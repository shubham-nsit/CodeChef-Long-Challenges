#include <stdio.h>

int main(void) {
	// your code goes here
	long int t;
	scanf("%ld",&t);
	while(t--)
	{
	    long int h,p;
	    scanf("%ld %ld",&h,&p);
	    while(h>0 && p!=0)
	    {
	        h=h-p;
	        p=p/2;
	    }
	    if(h<=0)
	    {
	        printf("1 \n");
	        
	    }
	    else
	    {
	        printf("0 \n");
	    }
	}
	return 0;
}

