#include<bits/stdc++.h>
using namespace std;

int main()
{
    long int t;
    cin>>t;
    while(t--)
    {
        long long int x,k,n,i,distance;
        cin>>n>>x>>k;
        if(x%k==0)
        {
            cout<<"YES \n";
        }
        else
        {
            distance=n+1-x;
            if(distance%k==0)
            {
                cout<<"YES \n";
            }
            else
            {
                cout<<"NO \n";
            }
            
        }
        
    }
    return 0;
}
